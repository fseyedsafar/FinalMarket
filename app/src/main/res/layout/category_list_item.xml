    <ImageView
        android:id="@+id/image_category_list"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="product"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/category_name_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="category"
            android:textColor="#D5807D7D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/regular_price_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#E41B1B"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/price_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="price"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>